<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_profile"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/btn_back_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Profile Image Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile_edit"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile_placeholder"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />

                <ImageView
                    android:id="@+id/btn_change_photo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/circle_orange_background"
                    android:padding="4dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/white" />

            </RelativeLayout>

<!--            <TextView-->
<!--                android:id="@+id/tv_username_edit"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="12dp"-->
<!--                android:text="W TEI"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="16sp"-->
<!--                android:textStyle="bold" />-->

        </LinearLayout>

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Full Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="FULL NAME"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="Full Name"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_medium"
                android:textSize="14sp" />

            <!-- NIM -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="NIM"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_nim"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="Nim"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_medium"
                android:textSize="14sp" />

            <!-- Jurusan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="JURUSAN"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_jurusan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="Jurusan"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_medium"
                android:textSize="14sp" />

            <!-- Angkatan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="ANGKATAN"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_angkatan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:hint="Angkatan berapa"
                android:paddingHorizontal="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_medium"
                android:textSize="14sp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="EMAIL"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Phone and Gender Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="PHONE"
                        android:textColor="@color/gray_light"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/edittext_background"
                        android:hint="+84"
                        android:inputType="phone"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_medium"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Gender -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Gender"
                        android:textColor="@color/gray_light"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/spinner_background"
                        android:paddingHorizontal="16dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Update Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="16dp">

<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:id="@+id/btn_update"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="48dp"-->
<!--                android:background="@drawable/button_update_background"-->
<!--                android:text="Update"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="16sp"-->
<!--                android:textStyle="bold" />-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_logout_background"
                android:gravity="center"
                android:text="Update"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawableEnd="@drawable/ic_logout"
                android:drawablePadding="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>