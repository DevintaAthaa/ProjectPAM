<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2C2C2C"
    android:padding="16dp">

    <!-- Success Section with Border -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dotted_border_background"
        android:padding="24dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <!-- Success Icon with Background -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/star_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star"
                android:tint="#FFA500" />

        </LinearLayout>

        <!-- Dotted Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dotted_line"
            android:layout_marginBottom="16dp" />

        <!-- Success Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PS Booked Successfully!"
            android:textColor="#FFA500"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/message_background"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Booking Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/white_card_background"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- PlayStation Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#F5F5F5"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- PlayStation Image -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_image_background"
                android:scaleType="centerCrop"
                android:src="@drawable/playstation_image" />

            <!-- PlayStation Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Play Station - 1"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="The Classic Chill Spot"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hr"
                    android:textColor="#666666"
                    android:textSize="11sp" />

            </LinearLayout>

            <!-- EA FC 22 Badge -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:padding="4dp"
                android:text="EA FC22"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Booking Details Rows -->
        <!-- Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="#E8E8E8"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DATE"
                android:textColor="#666666"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May, 21st 2025"
                android:textColor="#333333"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="#E8E8E8"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TIME"
                android:textColor="#666666"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09.00 - 10.00 WIB"
                android:textColor="#333333"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Deposit Item Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8E8E8"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DEPOSIT ITEM"
                android:textColor="#666666"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KTM"
                android:textColor="#333333"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- View All Play Station Section -->

    <!-- Spacer to push button to bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/view_all_border_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Dotted Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/dotted_border_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all Play Station"
            android:textColor="#4A9EFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Dotted Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/dotted_border_background" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Home Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_update_background"
        android:padding="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>