<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.MyProfileApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/orange_solid</item>
        <item name="colorPrimaryVariant">@color/orange_gradient_end</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange_gradient_start</item>
        <item name="colorSecondaryVariant">@color/orange_gradient_end</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.MyProfileApp.Dark" parent="Theme.MyProfileApp">
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

</resources>